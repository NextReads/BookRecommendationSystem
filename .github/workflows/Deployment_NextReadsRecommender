# Docs for the Azure Web Apps Deploy action: https://github.com/Azure/webapps-deploy
# More GitHub Actions for Azure: https://github.com/Azure/actions

name: Build and deploy container app to Azure Web App - NextReadsRecommender

on:
  push:
    branches:
      - Deployment
    path:
      - Recommender/**
  workflow_dispatch:

jobs:
  build:
    runs-on: 'ubuntu-latest'

    steps:
    - uses: actions/checkout@v2

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v1

    - name: Log in to registry
      uses: docker/login-action@v1
      with:
        registry: https://nextreadsrecommender.azurecr.io/
        username: ${{ secrets.AzureAppService_ContainerUsername_nextreadsrecommender }}
        password: ${{ secrets.AzureAppService_ContainerPassword_nextreadsrecommender }}

    - name: Build and push container image to registry
      uses: docker/build-push-action@v2
      with:
        push: true
        tags: nextreadsrecommender.azurecr.io/next-reads-recommender:${{ github.sha }}
        file: ./Recommender/Dockerfile

  deploy:
    runs-on: ubuntu-latest
    needs: build
    environment:
      name: 'production'
      url: ${{ steps.deploy-to-webapp.outputs.webapp-url }}

    steps:
    - name: Deploy to Azure Web App
      id: deploy-to-webapp
      uses: azure/webapps-deploy@v2
      with:
        app-name: 'NextReadsRecommender'
        slot-name: 'production'
        publish-profile: ${{ secrets.AzureAppService_PublishProfile_nextreadsrecommender }}
        images: 'nextreadsrecommneder.azurecr.io/next-reads-recommender:${{ github.sha }}'
